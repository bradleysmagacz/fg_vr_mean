include head.jade
body
	h3 Error below
	if messages.error
		.alert.alert-danger
			div= messages.error
	if messages.info
		.alert.alert-info
			div= messages.info
	if messages.success
		.alert.alert-success
			div= messages.success
	form(method='post', action='/signup', enctype='application/x-www-form-urlencoded')
		h3 Create Account
		ul
			li
				label(for='name.first') First Name:
				input#first_name(type='text', name='name.first')
			li
				label(for='name.last') Last Name:
				input#last_name(type='text', name='name.last')
			li
				label(for='email') Email*:
				input#email(type='email', name='email', required)
			li
				label(for='username') Username*:
				input#username(type='text', name='username', required)
			li
				label(for='new_password') Password*:
				input#new_password(type='password', name='password', required)
			li
				label(for='confirm_password') Confirm Password*:
				input#confirm_password(type='password', name='confirm_password', required)
			input#create(type='submit', value='Create Account', name='create')
